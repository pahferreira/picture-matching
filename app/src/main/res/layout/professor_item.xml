<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView android:layout_width="60dp" android:layout_height="60dp"

               android:src="@drawable/question_mark"
               android:id="@+id/ivFotoProfessor"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_marginLeft="5dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Nome Completo do Professor Mostrado Aqui"
                  android:textStyle="bold"
                  android:fontFamily="monospace"
                  android:id="@+id/tvNomeProfessor"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/tvDisciplina"
                  android:text="Nome Da Disciplina vai ser Mostrado aqui"
                  android:textStyle="italic">
        </TextView>
    </LinearLayout>
</LinearLayout>